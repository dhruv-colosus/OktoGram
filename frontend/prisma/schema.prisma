generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email    String @id
  username String @unique
  wallet   String
  // Tip      Tip[]
}

model Image {
  id      String @id @default(uuid())
  content String
}

model Tip {
  id        String @id @default(uuid())
  // tipper    User   @relation(fields: [userEmail], references: [email])
  userEmail String
  destEmail String
  postId    String
  amount    String
}
